{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "noImplicitReturns": false,
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src", "src/**/*.ts", "src/types/**.d.ts"]
}
